/* 水平间距 */
page {
  background: #F7F7F7;
}
.placeholder {
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(50, 50, 51, 0.5);
  line-height: 44rpx;
}
.codeTitle {
  width: 164rpx;
  height: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #323233;
  line-height: 32rpx;
  margin: 32rpx 0 0 32rpx;
}
.option {
  width: 750rpx;
  height: 100rpx;
  border-bottom: 2rpx solid #f5f5f5;
  padding: 0 40rpx;
  background: #fff;
  line-height: 100rpx;
  margin-top: 24rpx;
}
.pay, .pay_active {
  width: 686rpx;
  height: 100rpx;
  background: #488cf5;
  border-radius: 16rpx;
  opacity: 0.4;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 100rpx;
  text-align: center;
  margin: 52rpx 0 0 32rpx;
}
.pay_active {
  opacity: 1;
}
.codeButton, .codeButton_active {
  width: 686rpx;
  height: 100rpx;
  background: red;
  border-radius: 16rpx;
  opacity: 0.4;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 100rpx;
  text-align: center;
  margin: 32rpx 0 0 32rpx;
}
.codeButton_active {
  opacity: 1;
}
.list {
  background-color: #FFFFFF;
  margin-top: 16rpx;
}
.list > .li {
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2rpx solid #fafafa;
  padding: 30rpx;
}
.list > .li .left {
  color: #898989;
}
.list > .li .right {
  color: #000;
}

