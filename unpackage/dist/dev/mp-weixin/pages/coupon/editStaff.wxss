page {
  background-color: #f7f7f7;
}
.deleteButton {
  width: 686rpx;
  height: 100rpx;
  border-radius: 16rpx;
  border: 2rpx solid #488cf5;
  position: absolute;
  left: 32rpx;
  bottom: 44rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #488cf5;
  line-height: 100rpx;
  text-align: center;
}
.userBox {
  width: 750rpx;
  height: 206rpx;
  background: #FFFFFF;
  margin-top: 32rpx;
}
.userBox > image {
  width: 136rpx;
  height: 136rpx;
  margin: 40rpx 20rpx 0 42rpx;
  border-radius: 50%;
}
.name {
  height: 40rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #323233;
  line-height: 40rpx;
  margin-top: 68rpx;
}
.id {
  height: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(50, 50, 51, 0.3);
  line-height: 20rpx;
  margin-top: 20rpx;
}
.TotalBox {
  margin-top: 24rpx;
}
.RemarksBox, .TotalBox {
  width: 750rpx;
  height: 100rpx;
  background: #FFFFFF;
}
.RemarksBox .left, .TotalBox .left, .RemarksBox .right, .TotalBox .right {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #323233;
  line-height: 44rpx;
  margin: 28rpx 0 0 24rpx;
}
.RemarksBox .right, .TotalBox .right {
  margin: 28rpx 0 0 360rpx;
  color: rgba(50, 50, 51, 0.5);
}
.RemarksBox .right_image, .TotalBox .right_image {
  width: 32rpx;
  height: 32rpx;
  margin: 34rpx 0 0 16rpx;
}

