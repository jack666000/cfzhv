/* 水平间距 */
page {
  background: #F8F9FB;
}
.head {
  position: fixed;
  top: 0rpx;
  width: 750rpx;
  height: 120rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 16rpx 22rpx 0rpx rgba(10, 36, 99, 0.05);
  border-radius: 0rpx 0rpx 32rpx 32rpx;
}
.head .title {
  background: url(https://html5page.oss-cn-shanghai.aliyuncs.com/myCoupon.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 300rpx;
  width: 94vw;
  padding: 3vw;
  padding-top: 8vw;
}
.head .title .back image {
  width: 48rpx;
  height: 48rpx;
}
.head .tab {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  color: rgba(10, 36, 99, 0.5);
  font-size: 32rpx;
  font-weight: 600;
  height: 120rpx;
}
.head .tab > view {
  color: rgba(222, 177, 155, 0.5);
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 5rpx solid #FFFFFF;
}
.head .tab > .active {
  color: #DEB19B;
  border-bottom: 8rpx solid #DEB19B;
}
.couponBox {
  width: 650rpx;
  height: 256rpx;
  margin: 40rpx 0 0 40rpx;
}
.couponBox .couponUnused {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.couponBox .price {
  width: 216rpx;
  height: 216rpx;
  font-size: 56rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 216rpx;
  z-index: 1;
  align-self: flex-start;
  text-align: center;
}
.couponBox .info {
  width: 454rpx;
  height: 216rpx;
  z-index: 1;
  align-self: flex-start;
}
.couponBox .info .title {
  width: 336rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #323233;
  line-height: 44rpx;
  margin: 46rpx 0 0 24rpx;
}
.couponBox .info .subtitle {
  width: 336rpx;
  height: 40rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(50, 50, 51, 0.3);
  line-height: 40rpx;
  margin-left: 24rpx;
}
.couponBox .info .time {
  width: 350rpx;
  height: 40rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(50, 50, 51, 0.3);
  line-height: 40rpx;
  margin-left: 24rpx;
}

